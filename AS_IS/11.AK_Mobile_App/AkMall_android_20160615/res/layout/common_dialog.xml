<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="290dp"
	    android:layout_height="238.5dp"
	    android:orientation="vertical"
	    android:gravity="center"
	    android:background="@drawable/dialog_bg">
	    
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="88.5dp"
            android:layout_marginTop="62dp"
            android:gravity="center">
            
            <TextView
                android:id="@+id/messageTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""
				android:maxLines="4"
				android:textColor="#333333"
				android:gravity="center"
				android:textSize="16sp"></TextView>
            
        </LinearLayout>
        <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:gravity="center">
            
            <RelativeLayout
	            android:layout_width="120dp"
		        android:layout_height="42dp"
		        android:gravity="center">
	            <Button
			        android:id="@+id/yesButton"
			        android:layout_width="120dp"
			        android:layout_height="42dp"
			        android:background="@drawable/dialog_btn1"></Button>
	            <TextView
	                android:id="@+id/yesTextView"
					android:layout_width="120dp"
			        android:layout_height="42dp"
					android:gravity="center"
					android:text="보러가기"
					android:textColor="#ffffff"
					android:textStyle="bold"
					android:textSize="16sp"
					android:paddingBottom="2dp"></TextView>
	        </RelativeLayout>
	        <View
		        android:id="@+id/spaceView"
		        android:layout_width="10dp"
		        android:layout_height="match_parent"></View>
	        <RelativeLayout
		        android:id="@+id/noLayout"
	            android:layout_width="120dp"
		        android:layout_height="42dp"
		        android:gravity="center">
	            <Button
			        android:id="@+id/noButton"
			        android:layout_width="120dp"
			        android:layout_height="42dp"
			        android:background="@drawable/dialog_btn2"></Button>
	            <TextView
	                android:id="@+id/noTextView"
					android:layout_width="120dp"
			        android:layout_height="42dp"
					android:gravity="center"
					android:text="아니오"
					android:textColor="#666666"
					android:textStyle="bold"
					android:textSize="16sp"
					android:paddingBottom="2dp"></TextView>
	        </RelativeLayout>
	        
        </LinearLayout>
        
	</LinearLayout>
</RelativeLayout>    