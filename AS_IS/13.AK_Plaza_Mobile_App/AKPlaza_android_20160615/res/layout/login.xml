<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relate_aklogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc5b7" >

    <!-- 하단 tab -->

    <com.ak.android.akplaza.maintab.BottomTab
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!-- top 고정 -->

        <include
            android:id="@+id/include_top_main"
            android:layout_width="match_parent"
            android:layout_height="52.5dip"
            android:layout_alignParentTop="true"
            layout="@layout/include_top_main_02" />

        <ScrollView
            android:id="@+id/scroll_aklogin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#e5e2d5" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!--
	     <ImageView
	         android:id="@+id/login_logo"
	         android:layout_width="262.5dip"
	         android:layout_height="37.5dip"
	         android:layout_gravity="center_horizontal"
	         android:layout_marginTop="30dip"
	         android:background="@drawable/login_logo" />

                -->

                <RelativeLayout
                    android:layout_width="262.5dip"
                    android:layout_height="99.75dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="33dip"
                    android:background="@drawable/login_input" >

                    <LinearLayout
                        android:layout_width="262.5dip"
                        android:layout_height="99.75dip"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="262.5dip"
                            android:layout_height="49.875dip"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <EditText
                                android:id="@+id/login_id"
                                android:layout_width="262.5dip"
                                android:layout_height="49.875dip"
                                android:layout_marginLeft="8dip"
                                android:background="@null"
                                android:hint="@string/login_id"
                                android:maxLength="15"
                                android:textColor="#73675b"
                                android:textSize="16.5sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="262.5dip"
                            android:layout_height="49.875dip"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <EditText
                                android:id="@+id/login_pw"
                                android:layout_width="262.5dip"
                                android:layout_height="49.875dip"
                                android:layout_marginLeft="8dip"
                                android:background="@null"
                                android:hint="@string/login_password"
                                android:maxLength="15"
                                android:textColor="#73675b"
                                android:textSize="16.5sp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="11.25dip"
                    android:orientation="horizontal" >

                    <!--
	         <FrameLayout
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content" >

	             <Button
	                 android:id="@+id/id_save_off"
	                 android:layout_width="120dip"
	                 android:layout_height="33dip"
	                 android:background="@drawable/login_save"
	                 android:visibility="visible" />

	             <Button
	                 android:id="@+id/id_save_on"
	                 android:layout_width="120dip"
	                 android:layout_height="33dip"
	                 android:background="@drawable/login_save_s"
	                 android:visibility="gone" />
	         </FrameLayout>

                    -->
                    <!-- 자동 로그인 -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:text="@string/login_auto"
                        android:textColor="#73675b"
                        android:textSize="13.5sp" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5.25dip" >

                        <Button
                            android:id="@+id/auto_login_off"
                            android:layout_width="16.5dip"
                            android:layout_height="17.25dip"
                            android:background="@drawable/login_check_off" />

                        <Button
                            android:id="@+id/auto_login_on"
                            android:layout_width="16.5dip"
                            android:layout_height="17.25dip"
                            android:background="@drawable/login_check_on"
                            android:visibility="gone" />
                    </FrameLayout>
                </LinearLayout>

                <!-- 로그인 버튼 -->

                <Button
                    android:id="@+id/login_ok_btn"
                    android:layout_width="262.5dip"
                    android:layout_height="37.5dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="11.25dip"
                    android:background="@drawable/ak_login_btn"
                    android:text="@string/login"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33.75dip"
                    android:background="#ccc5b7" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="48.75dip"
                        android:layout_marginTop="11.25dip"
                        android:background="#ccc5b7"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" 
                            android:gravity="top" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="5dip"
                                android:text="@string/bullet"
                                android:textSize="13sp"
                                android:textColor="#AB9F90" />

                            <TextView
                                android:id="@+id/tv_signup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/login_info_01"
                                android:textColor="#73675b"
                                android:textSize="13sp"
                                android:textColorLink="@color/link" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" 
                            android:gravity="top">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="5dip"
                                android:text="@string/bullet"
                                android:textSize="13sp"
                                android:textColor="#AB9F90" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"                                
                                android:text="@string/login_info_02"
                                android:textColor="#73675b"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
