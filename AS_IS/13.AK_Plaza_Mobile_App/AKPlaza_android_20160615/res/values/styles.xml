<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- global -->
    <style name="body">
        <item name="android:background">@color/background</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">16sp</item>        
    </style>
    
    <!-- -->    
    <style name="label">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/em_normal</item>
		<item name="android:gravity">right|top</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingRight">10dp</item>
    </style>
    
    <!-- btn.size.color -->
    <style name="btn">
        <item name="android:shadowColor">#77000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="btn.large">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>     
    </style>
    
    <style name="btn.large.weight">        
        <item name="android:background">@drawable/btn_large_weighty</item>
    </style>
    
    <style name="btn.small">        
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>        
    </style>
    
    <style name="btn.small.normal">        
        <item name="android:background">@drawable/btn_small_normal</item>
    </style>
    
    

</resources>