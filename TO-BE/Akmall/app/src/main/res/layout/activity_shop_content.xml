<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shop_best"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="android.ak.com.akmall.activity.ShopContentActivity">

    <ScrollView
        android:id="@+id/CONTENT_SV_SCROLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="51dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <WebView
                android:id="@+id/CONTENT_WV_WEBVIEW"
                android:layout_width="match_parent"
                android:layout_height="100dp"></WebView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/CONTENT_RV_LIST"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/CONTENT_RV_CATEGORY"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="#333"
        android:visibility="gone"
        android:orientation="horizontal"></android.support.v7.widget.RecyclerView>

    <include
        layout="@layout/item_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
