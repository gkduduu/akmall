<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/I_BEST_MAINIV"
                android:layout_width="150dp"
                android:layout_height="150dp"/>

            <RelativeLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:visibility="gone"
                android:background="#e51c52">

                <TextView
                    android:id="@+id/I_BEST_COUNT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="01"
                    android:textColor="#ffffff"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/I_BEST_MENUIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/list_btn_menu"/>
                <ImageView
                    android:id="@+id/I_BEST_CLOSEIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:src="@drawable/list_btn_close"/>
                <ImageView
                    android:id="@+id/I_BEST_SHAREIV"
                    android:layout_below="@+id/I_BEST_CLOSEIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:src="@drawable/list_btn_share"/>
                <ImageView
                    android:id="@+id/I_BEST_LIKEIV"
                    android:layout_below="@+id/I_BEST_SHAREIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:src="@drawable/list_btn_like"/>
                <ImageView
                    android:id="@+id/I_BEST_BAGIV"
                    android:layout_below="@+id/I_BEST_LIKEIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:src="@drawable/list_btn_bag"/>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/image"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/I_BEST_BRANCH_LAYOUT"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginRight="2dp"
                    android:background="#333">

                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/I_BEST_BRANCH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="AK 분당"
                        android:textColor="#fff"
                        android:textSize="12sp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/I_BEST_PICKIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/tag_pick" />

                <ImageView
                    android:id="@+id/I_BEST_SELECTIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tag_selectshop"/>
            </LinearLayout>

            <TextView
                android:id="@+id/I_BEST_NAME"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="7dp"
                android:maxLines="2"
                android:text="[페이지플린] 프릴소매린넨 블라우스_p6b23408 뿌잉뿌잉뿌잉뿌잉뿌잉뿌잉뿌잉뿌잉뿌잉뿌잉뿌잉뿌잉뿌잉뿌잉뿌잉"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/I_BEST_SALEPRICE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100,000원"
                        android:textColor="#333"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginRight="6dp"
                        android:layout_alignParentBottom="true"/>

                    <TextView
                        android:id="@+id/I_BEST_PRICE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10,000원"
                        android:textColor="#999"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/I_BEST_PERCENT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="#333"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/I_BEST_PERCENT2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="%"
                        android:textColor="#333"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="15dp">

        <LinearLayout
            android:id="@+id/I_BEST_DELIVERY"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="11sp"
                android:text="무료배송" />

            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/I_BEST_DELIVERY"
                android:background="#ddd"></View>
        </LinearLayout>

        <TextView
            android:id="@+id/I_BEST_SCORE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/I_BEST_DELIVERY"
            android:text="상품평(100점)" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/I_BEST_SIMILARIV"
            android:layout_marginRight="4dp"
            android:text="연관상품"
            android:textSize="14sp"
            android:textColor="#999"/>

        <ImageView
            android:id="@+id/I_BEST_SIMILARIV"
            android:layout_width="9dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_link" />
        
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"></View>
</LinearLayout>