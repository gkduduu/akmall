<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e5e5e5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:textColor="#666"
                android:textSize="11sp" />
        </LinearLayout>

        <View
            android:layout_width="9dp"
            android:layout_height="match_parent"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PC버전보기"
                android:textColor="#666"
                android:textSize="11sp" />
        </LinearLayout>

        <View
            android:layout_width="9dp"
            android:layout_height="match_parent"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App알림 설정안내"
                android:textColor="#666"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_gravity="center"
        android:text="@string/footer_line1"
        android:textSize="10sp"
        android:textColor="#999"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_gravity="center"
        android:text="@string/footer_line2"
        android:textSize="10sp"
        android:textColor="#999"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_gravity="center"
        android:text="@string/footer_line3"
        android:textSize="10sp"
        android:textColor="#999"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_gravity="center"
        android:text="@string/footer_line4"
        android:textSize="10sp"
        android:textColor="#999"/>
    
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#666"
            android:gravity="center"
            android:text="@string/footer_line5"/>
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"></View>
        <View
            android:layout_width="1dp"
            android:background="#ccc"
            android:layout_height="match_parent"></View>
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#666"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/footer_line6"/>
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"></View>
        <View
            android:layout_width="1dp"
            android:background="#ccc"
            android:layout_height="match_parent"></View>
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"></View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#666"
            android:gravity="center"
            android:text="@string/footer_line7"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="13dp"
        android:layout_marginBottom="23dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#999"
        android:textSize="10sp"
        android:text="@string/footer_line8"/>
</LinearLayout>