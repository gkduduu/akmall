<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360dp">

        <ImageView
            android:id="@+id/I_GALLARY_MAINIV"
            android:layout_width="match_parent"
            android:layout_height="360dp" />

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/I_GALLARY_MENUIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/list_btn_menu" />

            <ImageView
                android:id="@+id/I_GALLARY_CLOSEIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/list_btn_close"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/I_GALLARY_SHAREIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/I_GALLARY_CLOSEIV"
                android:layout_marginTop="8dp"
                android:src="@drawable/list_btn_share"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/I_GALLARY_LIKEIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/I_GALLARY_SHAREIV"
                android:layout_marginTop="8dp"
                android:src="@drawable/list_btn_like"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/I_GALLARY_BAGIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/I_GALLARY_LIKEIV"
                android:layout_marginTop="8dp"
                android:src="@drawable/list_btn_bag"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eaeaea"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginRight="2dp"
            android:background="#333">

            <TextView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/I_GALLARY_BRANCH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="AK 분당"
                android:textColor="#fff"
                android:textSize="12sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/I_GALLARY_PICKIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:src="@drawable/tag_pick" />

        <ImageView
            android:id="@+id/I_GALLARY_SELECTIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tag_selectshop" />
    </LinearLayout>

    <TextView
        android:id="@+id/I_GALLARY_NAME"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7dp"
        android:maxLines="2"
        android:text="[페이지플린] 프릴소매린넨 블라우스_p6b23408 뿌잉뿌잉뿌잉뿌잉뿌잉뿌잉뿌잉뿌잉뿌잉뿌잉뿌잉뿌잉뿌잉뿌잉뿌잉"
        android:textSize="15sp"
        android:textColor="#000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp" >

            <TextView
                android:id="@+id/I_GALLARY_SALEPRICE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100,000원"
                android:layout_alignParentBottom="true"
                android:textColor="#333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/I_GALLARY_PRICE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/I_GALLARY_SALEPRICE"
                android:layout_marginLeft="5dp"
                android:text="10,000원"
                android:textColor="#999"
                android:textSize="12sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/I_GALLARY_PERCENT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="10"
                android:textColor="#333"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/I_GALLARY_PERCENT2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="%"
                android:textColor="#333"
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eaeaea"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/I_GALLARY_DELIVERY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="무료배송"
            android:textSize="14sp"
            android:textColor="#666" />

        <View
            android:id="@+id/I_GALLARY_DELIVERY_BAR"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/I_GALLARY_DELIVERY"
            android:background="#ddd"></View>

        <TextView
            android:id="@+id/I_GALLARY_SCORE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/I_GALLARY_DELIVERY_BAR"
            android:text="상품평(100점)"
            android:textSize="14sp"
            android:textColor="#666" />

        <ImageView
            android:id="@+id/I_GALLARY_SIMILARIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_link" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"></View>

</LinearLayout>